/**
 * 번역 CRUD 공통 서비스 인터페이스
 *
 * 모든 CMS 문서 타입에서 공통으로 사용하는 번역 CRUD 메서드 정의
 *
 * @template TTranslation - 번역 타입 (BaseTranslation을 확장)
 */
export interface BaseTranslationService<TTranslation extends BaseTranslation> {
  /**
   * 번역 목록 조회
   *
   * 특정 문서의 모든 번역을 조회합니다.
   *
   * @param documentId - 문서 ID
   */
  번역_목록을_조회_한다: (
    documentId: string,
  ) => Promise<ApiResponse<TTranslation[]>>;

  /**
   * 번역 조회
   *
   * 특정 문서의 특정 언어 번역을 조회합니다.
   *
   * @param documentId - 문서 ID
   * @param languageId - 언어 ID
   */
  번역을_조회_한다: (
    documentId: string,
    languageId: string,
  ) => Promise<ApiResponse<TTranslation>>;

  /**
   * 번역 생성
   *
   * @param data - 생성할 번역 데이터
   */
  번역을_생성_한다: (data: TTranslation) => Promise<ApiResponse<TTranslation>>;

  /**
   * 번역 수정
   *
   * @param documentId - 문서 ID
   * @param languageId - 언어 ID
   * @param data - 수정할 데이터 (부분 업데이트 가능)
   */
  번역을_수정_한다: (
    documentId: string,
    languageId: string,
    data: Partial<TTranslation>,
  ) => Promise<ApiResponse<TTranslation>>;

  /**
   * 번역 삭제
   *
   * @param documentId - 문서 ID
   * @param languageId - 언어 ID
   */
  번역을_삭제_한다: (
    documentId: string,
    languageId: string,
  ) => Promise<ApiResponse<void>>;

  /**
   * 여러 문서의 번역 목록을 한 번에 조회
   *
   * 여러 문서 ID를 받아서 각 문서의 번역 목록을 한 번에 조회합니다.
   * N+1 문제를 해결하기 위한 배치 조회 메서드입니다.
   *
   * @param documentIds - 문서 ID 배열
   * @returns 문서 ID를 키로 하는 번역 목록 맵 (Record<documentId, TTranslation[]>)
   *
   * @example
   * ```typescript
   * const response = await service.여러_문서의_번역_목록을_조회_한다(['doc1', 'doc2', 'doc3']);
   * if (response.success && response.data) {
   *   const doc1Translations = response.data['doc1']; // doc1의 번역 배열
   *   const doc2Translations = response.data['doc2']; // doc2의 번역 배열
   * }
   * ```
   */
  여러_문서의_번역_목록을_조회_한다: (
    documentIds: string[],
  ) => Promise<ApiResponse<Record<string, TTranslation[]>>>;
}
