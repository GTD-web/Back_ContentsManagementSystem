# ==========================================
# 애플리케이션 기본 설정
# ==========================================
PORT=4001
NODE_ENV=development

# ==========================================
# 데이터베이스 설정
# ==========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=lumir_cms
DB_SYNCHRONIZE=false

# ==========================================
# Storage 설정
# ==========================================
# Storage 타입: 'local' (로컬 개발) 또는 's3' (프로덕션)
STORAGE_TYPE=local

# 로컬 스토리지 설정 (STORAGE_TYPE=local 일 때)
LOCAL_UPLOAD_DIR=uploads
LOCAL_STORAGE_BASE_URL=http://localhost:4001/uploads

# AWS S3 설정 (STORAGE_TYPE=s3 일 때)
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# 테스트 환경에서 실제 S3 사용 (선택적)
# 기본값: false (테스트 시 로컬 스토리지 사용, test/ prefix)
# true로 설정하면 테스트에서 실제 S3에 업로드 (test/ prefix 사용, 실제 데이터와 분리)
# 실제 S3 테스트 시 AWS 자격 증명 필요
USE_REAL_S3_IN_TEST=false

# 백업
BACKUP_ENABLED=true

# 기본 언어
DEFAULT_LANGUAGE_CODE=en
